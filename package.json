    "scripts": {
        "prefetch": "node commands/prefetch.js",
        "prelint": "node commands/prelint.js",
        "prestart": "node commands/init.js",
        "start": "webpack serve --config ./config/webpack.dev.js",
        "build": "webpack --config ./config/webpack.prod.js",
        "test": "jest --collect-coverage --transformIgnorePatterns 'node_modules/(?!)/' --watchAll=false",
        "predeploy": "yarn build",
        "deploy": "gh-pages -d build",
        "serve": "serve -d build",
        "lint": "eslint --ext .tsx src/ && npx prettier --write . && npx prettier --check .",
