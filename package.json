{
    "name": "tmx-mercury",
    "version": "1.3.4",
    "homepage": "https://tjmelo.github.io/tmx-mercury",
    "dependencies": {
        "@testing-library/jest-dom": "^6.4.1",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.3.0",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "axios": "^1.6.7",
        "bootstrap": "^5.2.0",
        "chalk": "^5.0.1",
        "react": "^18.2.0",
        "react-bootstrap": "^2.10.0",
        "react-dom": "^18.2.0",
        "react-lazy-load-component": "^1.0.9",
        "react-router-dom": "^6.22.0",
        "react-scripts": "^5.0.1",
        "sass": "^1.70.0",
        "scrollreveal": "^4.0.9"
    },
    "scripts": {
        "prefetch": "node config/prefetch.js",
        "prelint": "node config/prelint.js",
        "prestart": "node config/init.js",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --transformIgnorePatterns 'node_modules/(?!)/' --watchAll=false",
        "eject": "react-scripts eject",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "lint": "eslint --ext .tsx src/ && npx prettier --write . && npx prettier --check .",
        "prepare": "husky install",
        "docker:dev": "docker build -t tmx-mercury . && docker run -dp 3000:3000 --name tmx-mercury-c tmx-mercury"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@types/node": "^20.11.16",
        "@types/react": "^18.2.51",
        "@types/react-dom": "^18.0.6",
        "@types/react-router-dom": "^5.3.3",
        "eslint": "^8.20.0",
        "eslint-plugin-react": "^7.30.1",
        "gh-pages": "^6.1.1",
        "husky": "^9.0.10",
        "prettier": "^3.2.4",
        "typescript": "^5.3.3"
    },
    "overrides": {
        "react-scripts": {
            "typescript": "^5"
        }
    },
    "type": "module"
}
